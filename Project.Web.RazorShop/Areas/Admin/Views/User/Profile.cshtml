            <div class="tab-pane fade" id="editprofile" role="tabpanel">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">ارتباطات</h6>
                        <form asp-action="UpdateUser" method="post" enctype="multipart/form-data" class="col-12 ajax-form" id="ajax-form" novalidate="">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>نام</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="FirstName" type="text" class="form-control" placeholder="نام" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>نام خانوادگی</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="LastName" type="text" class="form-control" placeholder="نام خانوادگی" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>تاریخ تولد</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="DateOfBirth" type="text" class="form-control persian-date-picker" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>کد ملی</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="Nationalcode" type="text" class="form-control" placeholder="عنوان محصول را وارد کنید" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>شماره تماس</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="عنوان محصول را وارد کنید" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>کدپستی</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="Postalcode" type="text" class="form-control" placeholder="عنوان محصول را وارد کنید" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>ایمیل</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="Email" type="text" class="form-control" placeholder="عنوان محصول را وارد کنید" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="form-group">
                                        <label>آدرس</label><label class="text-danger mr-1">*</label>
                                        <input asp-for="Adress" type="text" class="form-control" placeholder="عنوان محصول را وارد کنید" required />
                                        <span class="text-danger invalid-feedback"></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
