@model Project.Application.DTOs.User.UserProfile

@{
    ViewData["Title"] = "جزئیات حساب کاربری";
}
@section styles{
    <partial name="_filterstyles" />
    <partial name="_HelperStyles" />
}
@section scripts{

    <partial name="_filterscripts" />
    <partial name="_HelprScripts" />
    <partial name="_ValidationScriptsPartial" />
    <script src="~/admin/assets/js/UserProfile.js"></script>
}
<div class="row">
    <div class="col-md-4">

        <div class="card">
            <div class="card-body text-center">
                <figure class="avatar avatar-xl m-b-20">
                    <img src="/admin/assets/media/image/user/user.jpg" class="rounded-circle" alt="...">
                </figure>
                <h5 class="mb-1">@Model.FirstName @Model.LastName</h5>
                <p class="text-muted small"> مشتری فروشگاه</p>
                <button type="button" id="submit_updateform" class="btn btn-outline-success">
                    <i data-feather="edit-2" class="mr-2"></i> ثبت تغییرات
                </button>
            </div>
            <hr class="m-0">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4 text-info">
                        <h4 class="font-weight-bold">291</h4>
                        <span>خرید ها</span>
                    </div>
                    <div class="col-4 text-success">
                        <h4 class="font-weight-bold">10.596</h4>
                        <span>فالوور</span>
                    </div>
                    <div class="col-4 text-warning">
                        <h4 class="font-weight-bold">7.896</h4>
                        <span>لایک</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h6 class="card-title d-flex justify-content-between align-items-center">
                    اطلاعات

                </h6>
                <div class="row mb-2">
                    <div class="col-6 text-muted">نام:</div>
                    <div class="col-6">@Model.FirstName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-6 text-muted">نام خانوادگی:</div>
                    <div class="col-6">@Model.LastName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-6 text-muted">کد ملی:</div>
                    <div class="col-6">@Model.Nationalcode</div>
                </div>
                <div class="row mb-2">
                    <div class="col-6 text-muted">تاریخ تولد:</div>
                    <div class="col-6">@Model.DateOfBirthForShow</div>
                </div>
                <div class="row mb-2">
                    <div class="col-6 text-muted">کد پستی:</div>
                    <div class="col-6">@Model.Postalcode</div>
                </div>
                <div class="row mb-2">
                    <div class="col-6 text-muted">آدرس:</div>
                    <div class="col-6">@Model.Adress</div>
                </div>
                <div class="row mb-2">
                    <div class="col-6 text-muted">تلفن:</div>
                    <div class="col-6">@Model.PhoneNumber</div>
                </div>
                <div class="row mb-2">
                    <div class="col-6 text-muted">ایمیل:</div>
                    <div class="col-6">@Model.Email</div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-8">

        <div class="card">

            <div class="card-body">
                <div class="card-title">ارسال اعلان</div>
                <form>
                    <div class="form-group">
                        <textarea rows="2" class="form-control" placeholder="چیزی بنویسید"></textarea>
                    </div>
                    <div class="text-right">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <button class="btn btn-primary">ارسال</button>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <ul class="nav nav-pills flex-column flex-sm-row" id="myTab" role="tablist">
                    <li class="flex-sm-fill text-sm-center nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home"
                           role="tab" aria-selected="true">پست ها</a>
                    </li>
                    <li class="flex-sm-fill text-sm-center nav-item">
                        <a class="nav-link" id="timeline-tab" data-toggle="tab" href="#timeline"
                           role="tab" aria-selected="true">تایملاین</a>
                    </li>
                    <li class="flex-sm-fill text-sm-center nav-item">
                        <a class="nav-link" id="editprofile-tab1" data-toggle="tab" href="#editprofile"
                           role="tab"
                           aria-selected="false">
                            ویرایش اطلاعات
                        </a>
                    </li>
                    <li class="flex-sm-fill text-sm-center nav-item">
                        <a class="nav-link" id="earnings-tab" data-toggle="tab" href="#earnings" role="tab"
                           aria-selected="false">درآمد</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel">
                <div class="card">
                    <div class="card-body">
                    </div>
